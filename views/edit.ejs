<link rel="stylesheet" href="/css/style-add.css" />
<div class="container-form">
  <form action="/contact/edit" method="post">
    <% if (result !== false) { %>
    <div class="error-container">
      <ul>
        <%result.forEach(error => {%>
        <li><%- error.msg %></li>
        <% }); %>
      </ul>
    </div>
    <% } %>
    <div class="input-box">
      <input type="hidden" name="oldNama" value="<%- contact.nama %>" />
      <input
        type="text"
        name="nama"
        id="nama"
        placeholder="Nama"
        autocomplete="off"
        value="<%- contact.nama %>"
      />
    </div>

    <div class="input-box">
      <input
        type="text"
        name="email"
        id="email"
        placeholder="Email"
        autocomplete="off"
        value="<%- contact.email %>"
      />
    </div>

    <div class="input-box">
      <input
        type="text"
        name="noHP"
        id="contact"
        placeholder="Nomor HP"
        autocomplete="off"
        value="<%- contact.noHP %>"
      />
    </div>
    <button type="submit">Submit</button>
  </form>
</div>
